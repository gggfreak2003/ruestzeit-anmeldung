{% extends 'base.html.twig' %}

{% block title %}Neues Passwort setzen{% endblock %}

{% block body %}
<div class="container">
    <div class="columns is-centered">
        <div class="column is-4">
            <div class="box">
                <h1 class="title is-4 has-text-centered">Neues Passwort setzen</h1>

                {% for flash_error in app.flashes('error') %}
                    <div class="notification is-danger">
                        {{ flash_error }}
                    </div>
                {% endfor %}

                <form method="post">
                    <div class="field">
                        <label class="label" for="password">Neues Passwort</label>
                        <div class="control">
                            <input class="input" type="password" id="password" name="password" required autofocus>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button class="button is-primary is-fullwidth" type="submit">
                                Passwort speichern
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
