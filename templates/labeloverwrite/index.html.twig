				<label for="staticEmail" class="col-sm-2 col-form-label">{{ term }}</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" placeholder="Text Ã¼berschreiben, wenn Wert eingetragen" name="term[{{ term }}]" value="{{ fieldLabels[term] | default("") }}">
